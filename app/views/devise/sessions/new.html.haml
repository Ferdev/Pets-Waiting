%h2= I18n.t('devise.sign_in')
= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %fieldset.inputs
    %ol
      %li
        = f.label :email
        = f.text_field :email
      %li
        = f.label :password
        = f.password_field :password
      - if devise_mapping.rememberable?
        %li.boolean
          = f.check_box :remember_me
          = f.label :remember_me
  %fieldset.buttons
    %ol
      %li
        = f.submit I18n.t('devise.sign_in'), :id => :sign_in
        = link_to I18n.t('devise.forgot_password'), new_password_path(resource_name), :id => :forgot, :class => :button
